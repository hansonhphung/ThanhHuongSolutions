<div id="detailBillingFormModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form name="form_customer_details" novalidate enctype="multipart/form-data">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Hóa Đơn</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Mã Phiếu</label>
                                        <input type="text" name="TrackingNumber" ng-disabled="true" ng-model="trackingNumber" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Ngày Lập</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input class="form-control" ng-disabled="true" ng-model="billCreatedDate">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Mã Khách Hàng</label>
                                        <input type="text" name="CustomerTrackingNumber" ng-model="customerTrackingNumber" ng-disabled="true" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Tên Khách Hàng</label>
                                        <input type="text" name="CustomerName" ng-model="customerName" ng-disabled="true" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <table class="table table-responsive table-striped">
                                        <thead>
                                            <tr>
                                                <th>Mã Sản Phẩm</th>
                                                <th>Tên Sản Phẩm</th>
                                                <th>Đơn Giá</th>
                                                <th>Số Lượng</th>
                                                <th>Thành Tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="gradeX" ng-repeat="item in cart">
                                                <td>{{item.ProductTrackingNumber}}</td>
                                                <td>{{item.ProductName}}</td>
                                                <td>{{item.Price}}</td>
                                                <td>{{item.Number}}kg</td>
                                                <td>{{item.Price * item.Number}}</td>
                                            </tr>                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-md-6 center">
                            <button type="button" class="mb-xs mt-xs mr-xs btn btn-lg btn-default"><i class="fa fa-print"></i></button>
                            <button type="button" class="mb-xs mt-xs mr-xs btn btn-lg btn-warning" data-dismiss="modal">Trở Về</button>
                        </div>
                        <div class="col-md-6 col-xs-6 text-left">
                            <div class="m-none">
                                <h4><span class="color-red">Thành Tiền : {{totalAmount}} VND</span></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>