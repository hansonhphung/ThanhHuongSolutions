<div id="detailCustomerFormModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form name="form_customer_details" novalidate enctype="multipart/form-data">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{customerId == '' ? 'Thêm khách hàng' : 'Sửa khách hàng'}}</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div id="btnFile" class="hover_hand" ng-click="chooseFile()">
                                <img id="showImage" class="img-rounded center-block upload-images" ng-src="{{imgURL != '' ? imgURL : '/Images/image-placeholder.png'}}">
                            </div>    
                            <span hidden>
                                <input style="margin-top:5px;" class="btn btn-xs btn-primary center-block" type="file" name="customerImage" id="customerImage" onchange="angular.element(this).scope().changeImage(this)" file-feed>
                            </span>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Mã Khách Hàng <span class="color-red">(*)</span></label>
                                        <input type="text" name="TrackingNumber" ng-disabled="customerId != ''" ng-model="trackingNumber" class="form-control" required>
                                        <span class="color-red" data-valmsg-for="TrackingNumber" data-valmsg-replace="true" ng-show="form_customer_details.TrackingNumber.$dirty && form_customer_details.TrackingNumber.$error.required">
                                            <span for="Name" >Vui lòng nhập Mã Khách Hàng.</span>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Tên Khánh Hàng <span class="color-red">(*)</span></label>
                                        <input type="text" name="Name" ng-model="name" class="form-control" required>
                                        <span class="color-red" data-valmsg-for="Name" data-valmsg-replace="true" ng-show="form_customer_details.Name.$dirty && form_customer_details.Name.$error.required">
                                            <span for="Name" >Vui lòng nhập Tên Khách Hàng.</span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Số Điện Thoại</label>
                                        <input type="text" name="PhoneNumber" ng-model="phoneNumber" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Tồn Nợ (VNĐ)</label>
                                        <input type="number" name="LiabilityAmount" ng-model="liabilityAmount" min="0" class="form-control">
                                    </div>
                                    <span class="color-red" data-valmsg-for="LiabilityAmount" data-valmsg-replace="true" ng-show="form_customer_details.LiabilityAmount.$dirty && form_customer_details.LiabilityAmount.$error.min">
                                        <span for="LiabilityAmount" >Tồn nợ phải lớn hơn hoặc bằng 0.</span>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Địa Chỉ</label>
                                        <input type="text" name="Address" ng-model="address" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <input type="button" ng-disabled="form_customer_details.$invalid" class="btn btn-success btn-block" value="Lưu" ng-click="saveCustomer()" data-dismiss="modal"><i class="fa fa-user-plus" ></i>
                </div>
            </form>
        </div>
    </div>
</div>