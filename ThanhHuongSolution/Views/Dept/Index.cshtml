@{
    ViewBag.Title = "Quản Lý Nợ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-app="ThanhHuongSolution" ng-controller="DebtController">
    <header class="page-header">
        <h2>Quản Lý Nợ</h2>
    </header>

    <div class="panel-body">

        <div class="pull-right form-inline">
