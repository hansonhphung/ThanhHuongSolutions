@using ThanhHuongSolution.Extension;
@using ThanhHuongSolution.Security;
<!DOCTYPE html>
<html class="fixed">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" type="text/css" href="/Vendor/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="/Vendor/fontawesome/css/font-awesome.css" />
    <link rel="stylesheet" type="text/css" href="/Vendor/angular-toastr/dist/angular-toastr.css" />
    <link rel="stylesheet" type="text/css" href="/Vendor/angular-ui-select/dist/select.min.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/stylesheets/theme-custom.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/custom/style.css">

</head>
<body>
    <section class="body">

        <!-- start: header -->
        <header class="header">
            <div class="logo-container">
                <a href="../" class="logo">
                    <img src="/Images/ThanhHuongLogo.png" height="35" alt="Porto Admin" />
                </a>
                <div class="visible-xs toggle-sidebar-left" data-toggle-class="sidebar-left-opened" data-target="html" data-fire-event="sidebar-left-opened">
                    <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
                </div>
            </div>

            <!-- start: search & user box -->
            <div class="header-right">
                <div id="userbox" class="userbox">
                    <a href="#" data-toggle="dropdown">
                        <figure class="profile-picture">
                            <img src="/Images/!logged-user.jpg" alt="Joseph Doe" class="img-circle" data-lock-picture="assets/images/!logged-user.jpg" />
                        </figure>
                        <div class="profile-info">
                            <span class="name">@SessionProvider.UserName</span>
                            <span class="role">administrator</span>
                        </div>
                        <i class="fa custom-caret"></i>
                    </a>

                    <div class="dropdown-menu">
                        <ul class="list-unstyled">
                            <li class="divider"></li>
                            <li>
                                <a role="menuitem" tabindex="-1" href="/Account/Logout"><i class="fa fa-power-off"></i> Đăng xuất</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- end: search & user box -->
        </header>
        <!-- end: header -->

        <div class="inner-wrapper">
            <!-- start: sidebar -->
            <aside id="sidebar-left" class="sidebar-left sidebar-left-sm">

                <div class="sidebar-header">
                    <div class="sidebar-title">
                        Navigation
                    </div>
                    <div class="sidebar-toggle hidden-xs" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle">
                        <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
                    </div>
                </div>

                <div class="nano">
                    <div class="nano-content">
                        <nav id="menu" class="nav-main" role="navigation">
                            <ul class="nav nav-main">
                                <li>
                                    <a href="/Customer/Index">
                                        <i class="fa fa-users" aria-hidden="true"></i>
                                        <span>Khách Hàng</span>
                                    </a>
                                </li>

                                <li>
                                    <a href="/Product/Index">
                                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                        <span>Sản phẩm</span>
                                    </a>
                                </li>

                                <li>
                                    <a href="/Billing/Index">
                                        <i class="fa fa-usd" aria-hidden="true"></i>
                                        <span>Hoá Đơn</span>
                                    </a>
                                </li>

                                <li>
                                    <a href="/Selling/Index">
                                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                        <span>Xuất Hóa Đơn</span>
                                    </a>
                                </li>

                                <li>
                                    <a href="/Debt/Index">
                                        <i class="fa fa-book" aria-hidden="true"></i>
                                        <span>Quản Lý Nợ</span>
                                    </a>
                                </li>

                                <li>
                                    <a href="/Payment/Index">
                                        <i class="fa fa-book" aria-hidden="true"></i>
                                        <span>Thanh Toán Nợ</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <hr class="separator" />
                    </div>
                </div>

            </aside>
            <!-- end: sidebar -->
            <!-- start: body-content -->
            <section role="main" class="content-body">
                @RenderBody()
            </section>
            <!-- end: body-content -->
        </div>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="/Vendor/angular/angular.min.js"></script>
    <script type="text/javascript" src="/Vendor/angular-toastr/dist/angular-toastr.tpls.js"></script>
    <script type="text/javascript" src="/Vendor/angular-bootstrap/ui-bootstrap-tpls.min.js"></script> 
    <script type="text/javascript" src="/Vendor/nya-bootstrap-select/dist/js/nya-bs-select.min.js"></script>
    <script type="text/javascript" src="/Vendor/toastr/toastr.min.js"></script>
    <script type="text/javascript" src="/Vendor/angular-ui-select/dist/select.min.js"></script>
    

    <!-- Must be import above theme.js-->
    <script type="text/javascript" src="~/Scripts/CommonHelper/nanoscroller.js"></script>
    <script type="text/javascript" src="~/Scripts/CommonHelper/modernizr.js"></script>

    <!-- Must be import at last-->
    <script type="text/javascript" src="~/Scripts/CommonHelper/theme.js"></script>

    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <!--Reference the SignalR library. -->
    <script src="/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--Add script to update the page and send messages.-->
    
    @Html.Partial("_Notification", TempData.Notifications())
</body>
</html>
